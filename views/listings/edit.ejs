<% layout("./layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h2>Here You can edit your post.</h2>
        <form method="post" action="/allLists/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="listings[title]" value="<%= listing.title %>">
            </div>
        
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listings[description]" class="form-control"><%= listing.description %></textarea>
            </div>

            <div class="mb-3">
                Original Image <br>
                <img
                    src="<%= modifyUrl %>"
                    alt="img"
                    style="height: 150px;
                    margin-top: 5px;">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Uplode New Image</label>
                <input type="file" name="listings[image]" class="form-control">
            </div>
        
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" class="form-control" name="listings[price]" value="<%= listing.price %>">
                </div>
        
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" name="listings[country]" value="<%= listing.country %>">
                </div>
            </div>
        
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="listings[location]" value="<%= listing.location %>">
            </div>
        
            <button class="edit-btn" style="margin-bottom: 20px;">Update</button>
        </form>        
    </div>
</div>
</body>
</html>