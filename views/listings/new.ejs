<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h1>Create new Listing</h1>
    <form method="post" action="/allLists" novalidate class="needs validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listings[title]", placeholder="Enter your title" class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listings[description]" placeholder="Enter description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="listings[image]" class="form-control">
            required
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="text" name="listings[price]", placeholder="Enter your price" class="form-control">
            </div>
    
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listings[country]", placeholder="Enter your country" class="form-control">
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listings[location]", placeholder="Enter your location" class="form-control">
        </div>

        <button class="add-btn">Add</button>
        <br><br>
    </form>
</div>
</div>
</body>