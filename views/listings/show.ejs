<% layout("/layouts/boilerplate") %>
<body>
    <div>
        <h2 style="text-align: center;
            margin: 10px 0px 10px 0px;
            font-weight: 600;">
            Your Information
        </h2>
    </div>

    <div class="show-cont">
        <div class="show-img">
            <img src="<%= listing.image.url %>" class="show-img" alt="image">
        </div>

        <div class="show-text">
            <p>
                <p>Owned by: <i><b><%= listing.owner.username %></i></b></p>
                <p class="show-ttl"><b><%= listing.title %></b></p>
                <%= listing.description %> <br><br>
                &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/- <br><br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>

            <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="btns">
                <a href="/allLists/<%= listing._id %>/edit"
                class="edit-btn">Edit</a>
                
                <form method="post" action="/allLists/<%= listing._id %>?_method=DELETE">
                    <button class="dlt-btn">
                        Delete
                    </button>
                </form>
            </div>
            <% } %>
            <hr>
            <div class="review">
                <% if(currUser) { %>
                <h1>Leave a review</h1>
                <form action="/allLists/<%= listing._id %>/reviews" 
                method="post" 
                novalidate 
                class="needs-validation">
                    <!-- <div class="rating">
                        <input type="range" id="rating" class="form-range" name="review[rating]" min="1" max="5" value="1">
                    </div> -->
                    <div class="review">
                        <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <legend>First rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                    </div>

                    <div class="review-text">
                        <label for="comment" class="form-label">Review</label>
                        <textarea class="form-control" name="review[comment]" rows="3" cols="100" placeholder="Write your review here..." required></textarea>
                        <div class="invalid-feedback">
                            Please provide a review.
                        </div>
                    </div>
                    
                    <div class="review-btns">
                        <button type="submit" class="dlt-btn">Submit</button>
                    </div>
                </form>
                <hr>
                <% } %>

                <h1>All Reviews</h1>
                <div class="row">
                    <% for(review of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@<%= review.author.username %></h5>
                                <p class="card-title"><%= review.comment %></p>
                                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                            </div>
                            <form action="/allLists/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="post">
                                <button class="dlt-btn">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

    </div>
</body>